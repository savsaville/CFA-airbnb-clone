<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Capacity</th>
      <th>Bathrooms</th>
      <th>User</th>
      <th>Pets</th>
      <th>Smoking</th>
      <th>Wifi</th>
      <th>Bath</th>
      <th>Share</th>
      <th>Parties</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.capacity %></td>
        <td><%= room.bathrooms %></td>
        <td><%= room.user.email %></td>
        <td><%= yes_no(room.pets) %></td>
        <td><%= yes_no(room.smoking) %></td>
        <td><%= yes_no(room.wifi) %></td>
        <td><%= yes_no(room.bath) %></td>
        <td><%= yes_no(room.share) %></td>
        <td><%= yes_no(room.parties) %></td>
        <td><%= link_to 'See Room', room %></td>
        <td><%= link_to 'Edit Room', edit_room_path(room) %></td>
        <td><%= link_to 'Delete Room', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

